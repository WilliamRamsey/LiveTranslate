{
    "manifest_version": 3,
    "name": "Live Translate",
    "version": "1.0",
    "description": "Tools to translate webpage text and audio files easily",

    "permissions": [
      "contextMenus",
      "storage",
      "tabs",
      "nativeMessaging"
    ],

    "host_permissions": [
      "http://127.0.0.1/*"
  ],

    "background": {
      "service_worker": "scripts/background.js"
    },

    "action": {
      "default_popup": "html/popup.html"
    },

    "content_scripts": [
        {
          "js": ["scripts/content.js", "scripts/popup.js"],
          "matches": ["<all_urls>"]
        }
      ]
  }
